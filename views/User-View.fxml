<Pane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restaurant.controllers.UserViewController">
   <children>
      <VBox prefWidth="500.0" spacing="10.0" styleClass="main-layout">
         <children>
            <Label style="-fx-font-weight: bold;" text="User Information :">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="90.0" minWidth="90.0" prefWidth="90.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="300.0" prefWidth="400.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Username" />
                  <Label text="First Name" GridPane.rowIndex="1" />
                  <Label text="Last Name" GridPane.rowIndex="2" />
                  <Label text="Email" GridPane.rowIndex="3" />
                  <Label text="Phone No." GridPane.rowIndex="4" />
                  <Label text="Address" GridPane.rowIndex="5" />
                  <Label text="Role" GridPane.rowIndex="6" />
                  <Label text=":" GridPane.columnIndex="1" />
                  <Label text=":" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text=":" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text=":" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text=":" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text=":" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label text=":" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <Label fx:id="usernameLabel" GridPane.columnIndex="2" />
                  <Label fx:id="firstNameLabel" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Label fx:id="lastNameLabel" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  <Label fx:id="emailLabel" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                  <Label fx:id="phoneNoLabel" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                  <Label fx:id="roleLabel" GridPane.columnIndex="2" GridPane.rowIndex="6" />
                  <Label fx:id="addressLabel" GridPane.columnIndex="2" GridPane.rowIndex="5" />
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="50.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</Pane>
